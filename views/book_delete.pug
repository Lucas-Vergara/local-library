extends layout 

block content
  h1 #{title}: #{book.title}

  if book_instances.length 

    p #[strong Delete the following copies before attempting to delete this author.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Copies 

      dl
      each instance in book_instances
        dt
          a(href=instance.url) #{instance.id}
        dd #{instance.status}


  else 
    p Do you really want to delete this Book?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='authorid', required='true', value=book._id )

      button.btn.btn-primary(type='submit') Delete 